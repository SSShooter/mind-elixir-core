{
  "name": "mind-elixir",
  "version": "2.0.1",
  "description": "Mind elixir is a free open source mind map core.",
  "main": "dist/MindElixir.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint --cache --max-warnings 0  \"src/**/*.{js,json,ts}\" --fix",
    "start": "webpack-dev-server --mode development --env dist=0",
    "startd": "webpack-dev-server --mode development --env dist=1",
    "test": "jest --runInBand",
    "build": "webpack --mode production",
    "doc": "./node_modules/.bin/jsdoc src/ -R readme.md -c conf.json",
    "md": "./node_modules/.bin/jsdoc2md 'src/*.js' > api.md",
    "publish2": "npm run build && npm version patch -m \"build: release %s\" && npm publish",
    "beta": "npm run build && npm publish --tag beta"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --cache --fix"
    ],
    "src/**/*.{json,less}": [
      "prettier --write"
    ]
  },
  "files": [
    "package.json",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ssshooter/mind-elixir-core"
  },
  "homepage": "https://mind-elixir.com/",
  "author": "ssshooter",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.11.5",
    "@babel/runtime": "^7.15.4",
    "@commitlint/cli": "^17.4.3",
    "@commitlint/config-conventional": "^17.4.3",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "babel-loader": "^8.0.6",
    "better-docs": "^2.3.2",
    "css-loader": "^6.7.1",
    "docdash": "^1.1.1",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^8.0.3",
    "jest": "^27.5.1",
    "jsdoc": "^3.6.3",
    "jsdoc-to-markdown": "^7.1.1",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "lint-staged": "^13.1.2",
    "prettier": "2.8.4",
    "puppeteer": "^13.5.1",
    "puppeteer-to-istanbul": "^1.4.0",
    "regenerator-runtime": "^0.13.7",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.3",
    "url-loader": "^4.1.1",
    "webpack": "5.76.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  }
}
